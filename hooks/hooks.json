{
  "$schema": "https://anthropic.com/claude-code/hooks.schema.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "toolName": "mcp__chrome-devtools__navigate_page"
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Navigation completed to F5 XC console'"
          }
        ]
      },
      {
        "matcher": {
          "toolName": "mcp__chrome-devtools__fill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Form input submitted'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "toolName": "mcp__chrome-devtools__click"
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Executing browser action...'"
          }
        ]
      }
    ]
  }
}
