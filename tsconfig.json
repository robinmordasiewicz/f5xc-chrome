{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*", "skills/**/*"],
  "exclude": ["node_modules", "dist"]
}
